<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="schedulekeeper.view.CustomerNewController">
   <children>
      <HBox minHeight="400.0" minWidth="600.0">
         <children>
            <VBox alignment="CENTER" minHeight="600.0" minWidth="900.0" spacing="25.0">
               <children>
                  <HBox alignment="CENTER" minWidth="900.0" spacing="25.0">
                     <children>
                        <Label alignment="CENTER" minWidth="100.0" text="Name" />
                        <TextField fx:id="nameField" minWidth="300.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" layoutX="10.0" layoutY="295.0" minWidth="900.0" spacing="25.0">
                     <children>
                        <Label alignment="CENTER" minWidth="100.0" text="Address" />
                        <TextField fx:id="addressField" minWidth="300.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" layoutX="10.0" layoutY="335.0" minWidth="900.0" spacing="25.0">
                     <children>
                        <Label alignment="CENTER" minWidth="100.0" text="Address 2" />
                        <TextField fx:id="address2Field" minWidth="300.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" layoutX="10.0" layoutY="376.0" minWidth="900.0" spacing="25.0">
                     <children>
                        <Label alignment="CENTER" minWidth="100.0" text="Postal Code" />
                        <TextField fx:id="postalcodeField" minWidth="300.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" layoutX="10.0" layoutY="416.0" minWidth="900.0" spacing="25.0">
                     <children>
                        <Label alignment="CENTER" minWidth="100.0" text="Phone" />
                        <TextField fx:id="phoneField" minWidth="300.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" layoutX="10.0" layoutY="407.0" minWidth="900.0" spacing="25.0">
                     <children>
                        <Label alignment="CENTER" minWidth="100.0" text="City" />
                        <ComboBox fx:id="cityBox" onAction="#citySelect" prefWidth="300.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" layoutX="10.0" layoutY="435.0" minWidth="900.0" spacing="25.0">
                     <children>
                        <Label alignment="CENTER" minWidth="100.0" text="Country" />
                        <TextField fx:id="countryField" editable="false" minWidth="300.0" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox alignment="BOTTOM_CENTER" minHeight="600.0" minWidth="300.0" spacing="25.0">
               <children>
                  <Button minWidth="150.0" mnemonicParsing="false" onAction="#saveClick" text="Save" />
                  <Button minWidth="150.0" mnemonicParsing="false" onAction="#cancelClick" text="Cancel" />
               </children>
               <padding>
                  <Insets bottom="50.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
