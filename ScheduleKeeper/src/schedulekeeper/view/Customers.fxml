<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="schedulekeeper.view.CustomersController">
   <children>
      <HBox minHeight="400.0" minWidth="600.0">
         <children>
            <VBox alignment="CENTER" minHeight="600.0" minWidth="900.0" spacing="50.0">
               <children>
                  <TableView fx:id="customerTable" minHeight="600.0" minWidth="900.0">
                    <columns>
                      <TableColumn fx:id="IDColumn" editable="false" minWidth="50.0" prefWidth="-1.0" text="ID" />
                      <TableColumn fx:id="nameColumn" editable="false" minWidth="200.0" prefWidth="-1.0" text="Name" />
                        <TableColumn fx:id="addressColumn" editable="false" minWidth="150.0" prefWidth="-1.0" text="Address" />
                        <TableColumn fx:id="address2Column" editable="false" minWidth="150.0" prefWidth="-1.0" text="Address 2" />
                        <TableColumn fx:id="cityColumn" editable="false" minWidth="150.0" prefWidth="-1.0" text="City" />
                        <TableColumn fx:id="zipColumn" editable="false" minWidth="75.0" prefWidth="-1.0" text="Zip" />
                        <TableColumn fx:id="phoneColumn" editable="false" minWidth="125.0" prefWidth="-1.0" text="Phone" />
                    </columns>
                  </TableView>
               </children>
            </VBox>
            <VBox alignment="CENTER" minHeight="600.0" minWidth="300.0" spacing="25.0">
               <children>
                  <Button minWidth="150.0" mnemonicParsing="false" onAction="#newCustomerClick" text="New" />
                  <Button minWidth="150.0" mnemonicParsing="false" onAction="#updateCustomerClick" text="View/Edit" />
                  <Button minWidth="150.0" mnemonicParsing="false" onAction="#deleteClick" text="Delete" />
                  <Button minWidth="150.0" mnemonicParsing="false" onAction="#mainMenuClick" text="Menu" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
